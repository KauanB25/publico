    srand(time(NULL));
    printf("Ficha de Personagem \n");
    printf("Qual o seu nome, jovem aventureiro? \n");
    scanf("%s",nome);
    
    printf("Qual a sua raça:\n1-Humano\n2-Elfo\n");
    printf("Qual a sua escolha aventureiro: \n");
    scanf("%i", &raca);
    while(raca<1 || raca>2){
        printf("Escolha dentre as opções!\n");
    printf("Qual a sua raça:\n1-Humano\n2-Elfo\n");
    printf("Qual a sua escolha aventureiro: \n");
    scanf("%i", &raca);
