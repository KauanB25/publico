    printf("1-Guerreiro \n2-ladino \n3-mago \nSua escolha é: \n");
    scanf("%d",&classe_num);
    }
    
    if( classe_num == 1 ){
        hpMax=10;
    }
    
    if(classe_num==2){
    hpMax=8;
    }
    
    if (classe_num==3){
    hpMax=6;
    }
    
    printf("\nRolagem de atributos!\n");
    printf("Pressione 1 para continuar.\n");
