#include <stdio.h>
#include <stdlib.h>
#include <time.h>

int rolagem;
//simulação de um D20
int D20(void){
    rolagem=rand() % 21;
    while(rolagem==0){
        rolagem=rand() % 21;
    }
    return rolagem;
   }
//simulação d4
int D4(void){
    rolagem=rand() % 5;
    while(rolagem==0){
        rolagem=rand() % 5;
    }
   return rolagem;
}
//simulação d6
int D6(void){
    rolagem=rand() % 7;
    while(rolagem==0){
        rolagem=rand() % 7;
    }
    return rolagem;
}

int D8(void){
    rolagem=rand() % 9;
    while(rolagem==0){
        rolagem=rand() % 9;
    }
    return rolagem;
   }
// essa função considera a distribuição dos pontos como a rolagem de 4 d6,somando todos os valores e subtraindo o menor
int atributo(){
     int menor=0,dado=0,i,soma=0;
    for(i=0;i<4;i++){
        dado = D6();
        soma=soma+dado;
        if(i==0){
            menor=dado;
        }else{
            if(dado<menor){
                menor=dado;
            }
        }}
    soma=soma-menor;
        return soma;
    }

// função de combate    
int combate(int HP_inimigo,int hp,int modD,int modI,int modF,int classe_num){
     int acao,escolha,esquiva,ataqueInimigo,defesa,mp=4+modI,dano,teste=10;
    
    printf("Você encontro um inimigo!O combate começa!\n");
    while(HP_inimigo>0 || hp>0){
        dano=D4();
    if(classe_num==2){
            dano=D6();
        }
    if(classe_num==3){
    printf("\n");
    printf("Como vai atacar?\n1-ataque físico \n2-magia");
    scanf("%d",&acao);
    if(acao==2 && mp<=0 && HP_inimigo>0){
      printf("Sem mana.Use um ataque físico.\n");
        acao=0;
        continue;
    }}
    if(acao==2){
    printf("Sua mana atual é %d ",mp);
    printf("Você pode usar a magia:3-missel mágico(alto dano,-2mp,pode falhar)\n");
    scanf("%d",&acao);
      if(acao==3){
          dano=D8();
          mp=mp - 2;
      }
  }
        
    rolagem=D20();
    if(rolagem>=teste){
            
            if(rolagem==20){
                printf("CRÍTICO!\n");
                HP_inimigo=HP_inimigo - (dano * 2);
                
                if(HP_inimigo<=0){
                printf("O inimigo ficou com 0 de vida\n");
                return hp;}
                
            }
            else{
            HP_inimigo= HP_inimigo - dano;
            if(HP_inimigo<=0){
                printf("O inimigo ficou com 0 de vida\n");
                return hp;}
            }
    }
    
    printf("Você tirou %d no dado, a dificuldade é %d, o hp do inimigo é %d \n",rolagem,teste,HP_inimigo);
    printf("O inimigo de ataca! o que você faz?1-Esquivar(dificuldade 15) 2-defender\n");
        scanf("%d", &escolha);
        esquiva=D20()+modD;
         if (esquiva>=20){
                esquiva=20;
            }
            if (esquiva<=1){
                esquiva=1;
            }
        ataqueInimigo=D20();
        
        if(escolha==1){
            if(esquiva<15){
            hp=hp - 1;
            if(hp<=0){
                 return hp;
            }
            printf("Você tirou %d.Esquiva falhou! Você levou dano. Sua vida atual é %d  \n",esquiva,hp);
            }
            else{
            printf("Você tirou %d.Esquiva bem-sucessedida  \n",esquiva);
             }}
        
        if(escolha==2){
            defesa=D20()+modF;
            if (defesa>=20){
                defesa=20;
            }
            if (defesa<=1){
                defesa=1;
            }
            if(ataqueInimigo>defesa){
                hp= hp - 1;
                 if(hp<=0){
                 return hp;}
            
                printf("Você tirou %d,o inimigo tirou %d.Você não conseguiu se defender.Seu hp atual é %d \n",defesa,ataqueInimigo,hp);
        }
            else{
                printf("Você tirou %d, o inimigo tirou %d.Sua defesa foi bem-sucessedida! \n",defesa,ataqueInimigo);
            }
        }
        
    }
    return hp;
}
    
int modificador(int atr){
     int mod;
     if(atr==10){
        mod=0;
    }
    if(atr==8 || atr==9){
        mod=-1;
    }
    if(atr==11 || atr==12){
        mod=1;
    }
    if(atr<8){
        mod=-2;
    }
    if(atr>12){
        mod=2;
    }
    return mod;
}
    
int main(){
    char nome[20],vazio;
